<div class="nested-fields well">
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :qty %>
    <%= f.number_field :qty, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= link_to_remove_association "Remove Reward", f, class: "btn btn-danger" %>
</div>
