<div class="container">

	<h1>All Projects</h1>

	<% @projects.each do |project| %>
		<div class="well">
			<h2> <%= link_to project.title, project_path(project)	 %> </h2>
			<p> Goal: <%= number_to_currency(project.goal) %> </p>
			<p> Days to go: <%= ((project.end_date - Time.zone.now).to_i)/1.day + 2 %> </p>
			<p> Ending on: <%= project.end_date.strftime("%b %d, %Y") %> </p>
			<p> Description: <%= project.description %> </p>
		</div>
	<% end %>
	
</div>