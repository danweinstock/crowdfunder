<div class="jumbotron">
	<h1><%= @project.title %> <small>by: <%= "#{@project.owner.first_name} #{@project.owner.last_name}"%> </small></h1>
</div>

<div class="col-md-6">
	
	<ul class="list-group">
		<li id="backer-count" class="list-group-item"> Backers: <%= @project.pledges.count %> </li>			
		<li id="total-pledged" class="list-group-item"> Pledged: <%= number_to_currency(@pledged) %> </li>
		<li id="goal" class="list-group-item"> Goal: <%= number_to_currency(@goal) %> </li>
		<li class="list-group-item">
			<div class="progress">
				<div class="progress-bar" role="progressbar" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100" style=" width: <%= @progress %>%">
					<%= number_to_percentage @progress, precision: 0 %>
				</div>
			</div>
		</li>
	</ul>
</div>

<div class="col-md-6">
	<p id="time-left"><%= ((@project.end_date - Time.zone.now).to_i)/1.day + 1 %> days to go!</p>
	<p>End Date: <%= @project.end_date.strftime("%B %d, %Y") %> </p>
	<p>Project started: <%= @project.start_date.strftime("%B %d, %Y") %></p>
	<p>Description: <%= @project.description %> </p>			
</div>
	

	<h3>Rewards</h3>

		<% @project.rewards.each do |reward| %>

		<div class="reward-container col-md-6">
			<div class="panel panel-default">
				
				<div class="panel-heading">
					<h5 class="panel-title"> Pledge <%= number_to_currency(reward.price) %> or more </h5>
				</div>
				
				<div class="panel-body">
					<p> Description: <%= reward.description %> </p>
					<p>	Quantity: <%= reward.qty %> </p>
					<p> Backers: <%= reward.pledges.count %> </p>
					<p> Remaining: <%= reward.qty - reward.pledges.count %> </p>
				</div>
				
				<% if current_user %>
					<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#reward-modal-<%= reward.id %>">Back this project!</button>
				<% else %>
					<%= link_to "Log In to Back", login_path, class: "btn btn-primary btn-block" %>
				<% end %>

			</div>
			<% if current_user %>
				<div id="reward-modal-<%= reward.id %>" class="reward-modal modal fade" tabindex="-1" role="dialog" aria-abelliedby="rewardModalLabel" aria-hidden="true">
				 	<%= render partial: 'pledges/pledges_fields', locals: { project: @project, reward: reward, pledge: reward.pledges.new }%>
			 	</div>
		 	<% end %>
	 
	 	</div>
	<% end %>