<h2> <%= @project.title %> </h2>
	<p> by: <%= "#{@project.owner.first_name} #{@project.owner.last_name}"%> </p>			
		
<div class="project">
	<p> Days to go: <%= ((@project.end_date - Time.zone.now).to_i)/1.day + 2 %> </p>
	<p> End Date: <%= @project.end_date.strftime("%b %d, %Y") %> </p>
	<p> Backers: <%= @project.pledges.count %> </p>			
	<p> Pledged: <%= number_to_currency(@project.pledges.pluck(:amount).sum) %> </p>
	<p> Goal: <%= number_to_currency(@project.goal) %> </p>
	<p> Description: <%= @project.description %> </p>			
	<p> Project started: <%= @project.start_date.strftime("%b %d, %Y") %> </p>

</div>

<div class="rewards">
	<h3>Rewards</h3>
		<% @project.rewards.each do |reward| %>
		<p> Description: <%= reward.description %> </p>
		<p> Pledge Amount: <%= number_to_currency(reward.price) %> </p>
		<p>	Quantity: <%= reward.qty %> </p>
		</br>
	<% end %>
</div>

