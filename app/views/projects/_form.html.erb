<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<%= render 'shared/error_message', errors: @project.errors %>
	<% end %>
	
	<div class="form-group">
		<%= f.label :title, class: "sr-only" %>
		<%= f.text_field :title, class: "form-control", placeholder: "Title" %>	<br>
		<%= f.label :description, class: "sr-only" %>
		<%= f.text_area :description, class: "form-control", placeholder: "Description" %>
	</div>
	
	<div class="form-group">
		<%= f.label :goal %>
		<div class="input-group">
			<span class="input-group-addon">$</span>
			<%= f.number_field :goal, class: "form-control" %>
		</div>
	</div>
    
  <div class="form-group upload">
      <%= f.label :project_image %>
      <%= f.file_field :avatar %>
  </div>

	<div class="form-group">
		<div class="input-group">
			<%= f.label :start_date%> <br>
			<%= f.datetime_select :start_date, class: "form-control" %>
		</div>
		<div class="input-group">
			<%= f.label :end_date%> <br>
			<%= f.datetime_select :end_date, class: "form-control" %>
		</div>
	</div>
	
	<h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span> Rewards</h3>
	<div class="form-group">
		
		<%= f.fields_for :rewards do |reward| %>
			<%= render 'reward_fields', f: reward %>
		<% end %>
		
		<div class="link">
			<%= link_to_add_association 'Add Reward', f, :rewards, class: "btn btn-primary btn-lg btn-block" %>
		</div>

	</div>
	
	<div class="actions">
		<%= f.submit 'Create Project', class: "btn btn-success btn-lg btn-block" %>
	</div>
<% end %>