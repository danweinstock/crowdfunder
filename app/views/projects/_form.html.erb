<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<%= render 'shared/error_message', errors: @project.errors %>
	<% end %>
	
	<div class="form-group">
		<%= f.label :title  %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>
	
	<div class="form-group">
		<%= f.label :goal %>
		<%= f.number_field :goal, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :start_date %>
		<%= f.datetime_select :start_date, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :end_date %>
		<%= f.datetime_select :end_date, class: "form-control" %>
	</div>
	
	<h3>Rewards</h3>
	<div class="form-group">
		<%= f.fields_for :rewards do |reward| %>
			<%= render 'reward_fields', f: reward %>
		<% end %>
		<div class="link">
			<%= link_to_add_association 'Add Reward', f, :rewards, class: "btn btn-primary" %>
		</div>

	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>