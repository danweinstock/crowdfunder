<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<%= render 'shared/error_message', errors: @project.errors %>
	<% end %>
	
	<div class="form-group">
		<%= f.label :title%>
		<%= f.text_field :title%>
	</div>
	
	<div class="form-group">
		<%= f.label :description%>
		<%= f.text_area :description%>
	</div>
	
	<div class="form-group">
		<%= f.label :goal%>
		<%= f.text_field :goal%>
	</div>

	<div class="form-group">
		<%= f.label :start_date%>
		<%= f.datetime_field :start_date%>
	</div>

	<div class="form-group">
		<%= f.label :end_date%>
		<%= f.datetime_field :end_date%>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>