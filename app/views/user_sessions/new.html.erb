<div class="row col-md-4 col-md-offset-4">
	<h1>Log in</h1>

	<%=form_tag user_sessions_path, :method => :post do %>
		<div class="form-group">
			<%= label_tag :email %>
			<%= text_field_tag :email, nil, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: "form-control" %>
		</div>
		<div class="actions">
			<%= submit_tag "Log in"%>
		</div>
	<% end %>
</div>